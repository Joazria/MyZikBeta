       <%= link_to festival_bookings_path(:festival_id => @festival.id,
                                      :user_id => current_user),
                                      method: :post,
                                      :class=> 'btn btn-success' do %>
          <i class="fas fa-calendar-plus"></i> REQUEST A BOOKING
                    <% end -%>
        <% end -%>

            <%#= END OF THE CARD %>

 
 
        </div>

    </div>


