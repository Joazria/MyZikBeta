  <header>
    <%# <i class="fa fa-bars" aria-hidden="true"></i> %>
  </header>
  <main>
    <div class="row">
      <div class="left col-lg-4">
        <div class="photo-left">
              <%= image_tag @user.avatar , :gravity => "face", :crop=>"crop",:width=>200, :height=>200, class: "photo", alt: "Your profile picture" %>

          <!-- <img class="photo" src="https://image.noelshack.com/fichiers/2017/38/2/1505775062-1505606859-portrait-1961529-960-720.jpg"/> -->
          <%# <div class="active"></div> %>
        </div>
        <h4 class="name"> <%= @user.first_name %> <%= @user.last_name %></h4>
        
        <% unless @user.identity.nil? %>
           <p class="info"><%= @user.identity.member %>         <span class="flag-icon flag-icon-<%= @user.identity.country.downcase %> flag-icon-squared "></span></p>
        <p class="info"><i class="fas fa-envelope"></i> | <%= @user.email %></p>
        <p class="info"><i class="fab fa-whatsapp-square"></i> | <%= @user.identity.whatsapp %></p>
        <!-- <div class="stats row">
          <div class="stat col-xs-4" style="padding-right: 50px;">
            <p class="number-stat">3,619</p>
            <p class="desc-stat">Followers</p>
          </div>
          <div class="stat col-xs-4">
            <p class="number-stat">42</p>
            <p class="desc-stat">Following</p>
          </div>
          <div class="stat col-xs-4" style="padding-left: 50px;">
            <p class="number-stat">38</p>
            <p class="desc-stat">Uploads</p>
          </div>
        </div> -->
        <p class="desc text-justify"> <%= @user.identity.release %> </p>
        <div class="social">
          <i class="fab fa-facebook-square" aria-hidden="true"></i>
          <i class="fab fa-twitter-square" aria-hidden="true"></i>
          <i class="fab fa-pinterest-square" aria-hidden="true"></i>
          <i class="fab fa-tumblr-square" aria-hidden="true"></i>
        </div>
        <% end %>
        
       
      </div>
      <div class="right col-lg-8">
       <!--  <ul class="nav">
          <li>Gallery</li>
          <li>Collections</li>
          <li>Groups</li>
          <li>About</li>
        </ul> -->
        <%# <span class="follow">Projects</span> %>
        <% unless @user.agency.nil? %>
         <h3>Agency </h3> 

        <div class="cards">
          
            <%= link_to @user.agency do %>
          <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @user.agency.logo.key, :effect=>"art:zorro", crop: :fill %>')">
              <%= @user.agency.company %>
          </div>
            <% end -%>
        </div>
        <% end %>
        
        <% unless @user.bands.nil? %>
        <br>
         <h3>Bands</h3> 

        <div class="cards">
          <% @user.bands.each do |band| %>
            <%= link_to band do %>
          <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path band.photo.key, :effect=>"art:zorro", crop: :fill %>')">
              <%= band.name %>
          </div>
            <% end -%>
          <% end %>
        </div>
        <% end %>
        
      </div>
  </main>
