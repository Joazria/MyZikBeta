<div class="cards">


<% @users.each do |user| %>


<div class="profile-card">
  <!-- AVATAR -->
  <% if user.avatar.attached? %>
    <%= image_tag user.avatar , :gravity => "face", :crop=>"crop",:width=>200, :height=>200, class: "profile-card__avatar", alt: "Your profile picture" %>
  <% else %>
    <%= image_tag "https://res.cloudinary.com/numama/image/upload/v1625228581/DISCOP/discop_main_o2z8zi.png" ,  class: "profile-card__avatar", alt: "Your profile picture"  %>
    <%= link_to "Add Your Avatar", edit_user_registration_path , :class => "profile-card__btn" %>
  <% end %>

<!-- IDENTITY -->
  <!-- PROFIL INCOMPLET -->
  <% if user.identity.nil? %>
    <ul class="profile-card__info">
      <li class="profile-card__info-item">
          <%= user.first_name %>  <%= user.last_name %>
      </li>


    </ul>
  <% else %>
    <ul class="profile-card__info">
      <li class="profile-card__info-item">

      </li>
      <li class="profile-card__info-item">
          <%= user.first_name %>  <%= user.last_name %>
      </li>
      <li class="profile-card__info-item">
      <%= user.identity.member %>
      </li>
  <% end %>


    </ul>

</div>
<% end %>
</div>
