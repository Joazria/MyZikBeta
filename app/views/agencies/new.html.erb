<br><br><br><br><br>
<div class="container">
  <h1>NEW AGENCY REGISTRATION</h1>

  <%= simple_form_for @agency do |f| %>

  <div class="row ml-2">
      <div class="col-md-10">
        <%= f.input :agency_name,
                  label: "Nome de sua agencia",
                  placeholder: '...',
                  required: true %>
      </div>
     </div>



    <div class="row ml-2">
      <div class="col-md-5">
        <%= f.input :agency_link,
                    label: 'Website:',
                    placeholder: '...' %>
      </div>
        <div class="col-md-5">
        <%= f.input :agency_fb,
                    label: 'Facebook',
                    placeholder: '...' %>
      </div>
      <div class="col-md-5">
        <%= f.input :agency_insta,
                    label: 'Instagram',
                    placeholder: '..' %>
      </div>

     
        <div class="col-md-5">
          <%= f.input :agency_tel,
                      label: 'Telefone:',
                      placeholder: '...' %>
        </div>
         <div class="col-md-5">
          <%= f.input :agency_email,
                      label: 'E-mail',
                      placeholder: 'contato@johnlenon.com' %>
        </div>


        <div class="col-md-5">
              <%= f.input :agency_country,
                          as: :country %>
        </div>


        <div class="col-md-5">
            <%= f.input :agency_state,
                        label: "State / Estado"  %>
         </div>

       <div class="col-md-10">
              <%= f.input :agency_release,
                          label: "Release",
                          as: :text %>
        </div>

            <div class="col-md-6">
            <%= f.input :logo,
                        as: :file  %>
            </div>

            <div class="col-md-6">
            <%= f.input :banner,
                        as: :file %>
            </div>
                <p><%= f.submit "Create My Agency Profile", class: "btn btn-flat" %></p>
  <% end %>
        </div>
    



</div>
 </div>