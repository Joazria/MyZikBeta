<div class="container">
      <h1 class="text-right m-3">
         FESTIVAIS </span> <span class="text-white"><i class="far fa-calendar-alt"></i>
        </h1>

<br>


      <div class="cards">
      <%  @festivals.shuffle.first(6).each do |festival| %>
         <%= link_to festival do %>
          <div class="card-category flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path festival.photo.key, :effect=>"art:zorro", crop: :fill %>')">
            <%= festival.festival_name.upcase.first(25) %>
          <div class="festival-date">
          <% unless festival.periode_start.nil? || festival.periode_end.nil?%>
            <mark><%= festival.periode_start.strftime('%d-%m') %> | <%= festival.periode_end.strftime('%d-%m') %></mark>
            <% end %>
      </div>
  
      </div>

      <% end %>
    <% end %>
    </div>
    <%= link_to festivals_path, class:'btn btn-flat btn-lg my-5' do %>
    <i class="far fa-calendar-alt"></i> | TODOS OS FESTIVAIS
    <% end -%>
</div>

