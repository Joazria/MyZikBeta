
<div class="ml-4">
<h4>Hello <%= current_user.first_name %></h4>
<br>

<form class="form-inline">
  <div class="form-group mb-2">

   <%= form_tag ongoing_festivals_path, method: :get do %>
<div class="search-form-control form-group">
  <%= text_field_tag :query,
    params[:query],
    class: "form-control string required",
    placeholder: "Procurar um festival"
  %>
  </div>
  <div class="form-group mx-sm-3 mb-2">
  <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Procurar
    </button>  
    <% end %>

  </div>



          </div>
</form>

</div>

         <%= link_to new_festival_path do   %>
             <button class="btn-ghost">NEW FESTIVAL</button>
        <% end %> 
<!-- search -->

 <% unless @results.nil? %>
    <%  @results.order(updated_at: :desc).each do |festival| %>
    
           <%= link_to festival do %>

        <%= render "shared/on_going_search_festival", festival:festival%>
    <% end %>
  <% end %>
<% end %>   
