<div class="dashboard__validation-container ">
<div class="col-8">
    <h5 class="mt-2">Participantes On-line</h5>

    <table class="table mt-4">
      <thead>
        <tr>
          <!-- <th><i class="far fa-id-card"></i></th> -->
          <th>Nome</th>
          <th>Sobrenome</th>
          <th>email</th>

          <th>Last Connection</th>
          <th>OnLine</th>
          <th>Created at</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>

            <td><%= link_to profile_path(user) do  %><%= user.first_name %> <% end -%></td>
            <td><%= link_to profile_path(user) do  %><%= user.last_name %> <% end -%></td>

            <td><%= mail_to user.email, "#{user.email}" %></td>

            <td><%= user.last_seen_at.nil? ? "Never signed in" : time_ago_in_words(user.last_seen_at) %></td>
             <% unless user.last_seen_at.nil? %>
                <td><% if user.last_seen_at > (15.minutes.ago) %>
               <span class="badge badge-success">Online</span>
               <% end -%>
             </td>
             <td><%= user.created_at %>  </td>

             <% end %>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  </div>
