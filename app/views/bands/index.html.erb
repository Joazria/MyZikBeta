<br><br><br><br><br><br><br><br>
       <div class="d-flex m-2">
          <%= form_tag(bands_path, :method => "get", class: 'search-bar__form') do %>
            <div class="search-form-control form-group">
              <%= select_tag "query", options_for_select(@searchable_bands) , class:"custom-select text-uppercase" %>
              <button name="button" type="submit" class="btn btn-flat">
                <i class="fas fa-search"></i> 
              </button>
            </div>
          <% end %>
        </div>

     
            <% unless @results.nil? %>
            <div class="col-12">
                        <%= link_to "Clear Your Research", bands_path, class: "btn btn-outline-primary text-white" %>

            </div>
            <% end -%>
         </div>








 <div class="container">
  <% unless @results.nil? %>
      <div class="cards my-5">
        <%  @results.each do |band| %>
          <%= link_to band do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path band.photo, :effect=>"art:zorro", crop: :fill %>')">
                <%= band.name %>
            </div>
        <% end %>
      <% end %>
  </div>


    <% else %>


    <div class="cards my-5">
    <%  @bands.each do |band| %>
       <%= link_to band do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path band.photo.key, :effect=>"art:zorro", crop: :fill %>')">
            <%= band.name %>
        </div>
    <% end %>
  <% end %>
  </div>
   <% end %>

</div>
